<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/civ_article_comment_user_pic"
                                                  android:layout_width="32dp"
                                                  android:layout_height="32dp"
                                                  android:layout_marginStart="8dp"
                                                  android:layout_marginLeft="8dp"
                                                  android:layout_marginTop="8dp"
                                                  android:src="@drawable/user_48px"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  app:layout_constraintTop_toTopOf="parent"/>
    <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp" android:background="#727272" app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp">

    </View>
    <TextView
            android:id="@+id/tv_article_comment_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
            android:text="TextView" android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/civ_article_comment_user_pic"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Hammad Ali Shah"/>
    <TextView
            android:id="@+id/tv_article_comment_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/civ_article_comment_user_pic"
            app:layout_constraintTop_toBottomOf="@+id/tv_article_comment_user_name" tools:text="HAHAHAHA"/>
    <TextView
            android:id="@+id/tv_article_comment_upload_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="4 days ago"
            app:layout_constraintBottom_toTopOf="@+id/view3"
            app:layout_constraintStart_toStartOf="@+id/tv_article_comment_body"
            app:layout_constraintTop_toBottomOf="@+id/tv_article_comment_body"/>
</androidx.constraintlayout.widget.ConstraintLayout>